<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Custom_BackgroundColor"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.IconButton"
        android:id="@+id/appearanceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/lightmode"
        app:iconSize="26dp"
        app:iconTint="@color/Custom_MainColorGolden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.button.MaterialButton>

    <LinearLayout
        android:id="@+id/parentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="54dp"
        android:paddingEnd="32dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/nav_header_profile_image"
            android:scaleType="centerCrop"
            android:src="@drawable/omar_photo"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

        <TextView
            android:id="@+id/nav_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/omar_al_boushi"
            android:textColor="@color/Custom_Black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_header_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/cairo_light"
            android:text="@string/bachelor_in_communications_technology_bact"
            android:textColor="@color/Custom_Dark_Grey"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:id="@+id/top_stroke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Custom_Dark_Grey"
        app:layout_constraintBottom_toBottomOf="@+id/parentName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
