<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- الضربة الخارجية -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="6dp"
                android:color="@color/Custom_MainColorBlue"/>
        </shape>
    </item>
    <!-- الضربة الداخلية -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="3dp"
                android:color="@color/Custom_BackgroundColor"/>
        </shape>
    </item>
</layer-list>
